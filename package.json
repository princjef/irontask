{
  "name": "irontask",
  "version": "1.1.1",
  "description": "Persistent, queryable task scheduling for Azure Cosmos DB",
  "keywords": [
    "task",
    "job",
    "message",
    "cron",
    "schedule",
    "Azure",
    "Cosmos",
    "CosmosDB",
    "persistent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/princjef/irontask.git"
  },
  "author": "Microsoft",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write --loglevel warn \"src/**/*.ts\" \"*.md\"",
    "format:verify": "prettier --check --loglevel warn \"src/**/*.ts\" \"*.md\"",
    "lint": "tslint --project tsconfig.json --fix",
    "lint:verify": "tslint --project tsconfig.json",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "tsc",
    "prebuild:verify": "npm run clean && npm run format:verify && npm run lint:verify",
    "build:verify": "tsc",
    "pretest": "npm run build:verify",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathIgnorePatterns src/test/",
    "test:functional": "jest --testPathPattern src/test/.*\\.spec\\..*",
    "prepublishOnly": "npm run build:verify",
    "watch": "tsc -w",
    "watch:test": "jest --watch",
    "show-coverage": "opener coverage/index.html",
    "doc": "api-extractor run && api-documenter -i ./temp/api -o ./docs/api",
    "prerelease": "npm run build:verify && npm run doc",
    "release": "semantic-release"
  },
  "dependencies": {
    "@azure/cosmos": "^2.1.5",
    "cron-parser": "^2.11.0",
    "json-merge-patch": "^0.2.3",
    "lodash.clonedeep": "^4.5.0",
    "p-queue": "^6.0.1",
    "retry": "^0.12.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@microsoft/api-extractor": "^7.1.7",
    "@princjef/api-documenter": "^1.0.2",
    "@princjef/tslint-config": "^2.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.9",
    "@types/jest": "^24.0.13",
    "@types/json-merge-patch": "0.0.4",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^8.10.49",
    "@types/retry": "^0.12.0",
    "@types/uuid": "^3.4.4",
    "commitlint-azure-pipelines-cli": "^1.0.2",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "moment": "^2.24.0",
    "opener": "^1.5.1",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.15",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.3.4000"
  },
  "files": [
    "/src/",
    "/dist/",
    "!/src/test/",
    "!/dist/test/",
    "!/src/**/*.spec.*",
    "!/dist/**/*.spec.*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "src/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/test/**/*",
      "!src/sproc/**/*",
      "!**/*.spec.ts"
    ],
    "coverageReporters": [
      "text",
      "cobertura",
      "json",
      "html"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
